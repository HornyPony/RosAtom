<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".Tasks.FilterTasksActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Фильтрация"
        android:textSize="40sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="По подчиненности"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
       />

    <CheckBox
        android:id="@+id/checkboxPodch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="От начальника"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/text1" />

    <CheckBox
        android:id="@+id/checkboxPodch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="От руководителя цеха"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkboxPodch1" />

    <CheckBox
        android:id="@+id/checkboxPodch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="От мастера"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkboxPodch2" />

    <CheckBox
        android:id="@+id/checkboxPodch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="От коллег"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkboxPodch3" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="По видам деятельности"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/checkboxPodch4"
        app:layout_constraintStart_toStartOf="parent"
        />

    <CheckBox
        android:id="@+id/checkboxTypeOfWork1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Уборка"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/text1"
        app:layout_constraintTop_toBottomOf="@id/text2" />

    <CheckBox
        android:id="@+id/checkboxTypeOfWork2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Соц. медиа"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkboxTypeOfWork1" />

    <CheckBox
        android:id="@+id/checkboxTypeOfWork3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проверка"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkboxTypeOfWork2" />

    <CheckBox
        android:id="@+id/checkboxTypeOfWork4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ремонт"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkboxTypeOfWork3" />

    <CheckBox
        android:id="@+id/checkboxTypeOfWork5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Производство"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkboxTypeOfWork4" />

    <CheckBox
        android:id="@+id/checkboxTypeOfWork6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Отчетность"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkboxTypeOfWork5" />


</androidx.constraintlayout.widget.ConstraintLayout>